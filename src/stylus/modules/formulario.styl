label 
	color $Blanco
	font-family $Black
	font-size 1.6rem
	font-weight 100
	width 100%

input[type=text],input[type=email], select
	background $Azul
	border none
	box-shadow 2px 2px 2px 2px rgba(0,0,0,0.2)
	color $Blanco
	font-family $Black
	font-size 2rem
	font-weight 100
	height 30px
	padding 5px
	width 100%
label[for=fraseFoto]
	color $Azul
	text-align center
	font-size 20px
	text-shadow 2px 2px #cccccc
	letter-spacing 2px
	padding 2px
	margin-top 10px
	
.texto-terminosC
	color $Azul
	font-family $Black
	font-size 1.6rem
	font-weight 100
	width 100%
	
.terminos-cont
	margin-bottom 20px
	
input.check-terminos
	width 10%
	float left
	
label.text_terminos
	box-shadow none
	width 90%
	float left
	
